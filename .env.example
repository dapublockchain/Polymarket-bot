# Polymarket CLOB WebSocket
POLYMARKET_WS_URL=wss://ws-subscriptions-clob.polymarket.com/ws/market

# Polygon RPC
POLYGON_RPC_URL=https://polygon-rpc.com
POLYGON_CHAIN_ID=137

# Wallet Configuration (for dry-run mode, these can be fake)
PRIVATE_KEY=your_private_key_here
WALLET_ADDRESS=your_wallet_address_here

# Gas Configuration
GAS_PRICE_MODE=eip1559  # eip1559 or legacy
MAX_GAS_PRICE=500000000000  # 500 gwei
GAS_LIMIT_MULTIPLIER=1.2

# Strategy Configuration
MIN_PROFIT_THRESHOLD=0.01  # 1% minimum profit
TRADE_SIZE=10  # USDC trade size for VWAP calculation
MAX_SLIPPAGE=0.02  # 2% maximum slippage

# Logging
LOG_LEVEL=INFO
LOG_FILE=data/polyarb.log

# Database
DATABASE_PATH=data/polyarb.db
